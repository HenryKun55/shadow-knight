{
  "name": "shadow-knight",
  "version": "1.0.0",
  "description": "A mechanically delicious 2D action game with Dark Souls/Hollow Knight difficulty",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "serve . -s -l 3000",
    "start": "npm run dev",
    "build": "npm run build:copy",
    "build:copy": "mkdir -p dist && cp -r src assets styles index.html dist/",
    "deploy": "gh-pages -d dist",
    "predeploy": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "game",
    "2d",
    "action",
    "canvas",
    "javascript",
    "dark-souls",
    "hollow-knight"
  ],
  "author": "Shadow Knight Dev Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.1.2",
    "eslint": "^8.55.0",
    "gh-pages": "^6.3.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.1.0",
    "serve": "^14.2.1",
    "terser": "^5.24.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
